@Model Vidly.ViewModels.ExcerciseListMovieModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<br />
@using (Html.BeginForm("New", "Movies"))
{
    <button class="btn btn-primary" href="movies/new" style="margin-bottom:20px;">New Movie</button>
}
@if (Model.Movies.Count == 0)
{
    <text>No one has rentet this movie.</text>
}
else
{
    <table class="table table-­‐bordered table-­‐hover">
        <tr>
            <th>Name</th>
            <th>Genre</th>
        </tr>

        @foreach (var movie in Model.Movies)
        {
    <tr>        
        <td> @Html.ActionLink((string)movie.Name, "Edit", new { Id = movie.Id}) </td>
        <td>@movie.Genre.Name</td>
    </tr>
        }
    </table>
}

